<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/brick" />

    <TableLayout
        android:id="@+id/tableLayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/calcRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_style">

            <TextView
                android:id="@+id/formura"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:fontFamily="@font/maven_pro_medium"
                android:gravity="right|center_vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:textSize="46sp" />
        </TableRow>

        <TableRow
            android:id="@+id/numRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/clear"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif-condensed-light"
                android:text="C"
                android:textColor="#EEEEEE"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/sign"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif-condensed-light"
                android:text="+/-"
                android:textColor="#EEEEEE"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/percent"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif-condensed-light"
                android:text="%"
                android:textColor="#EEEEEE"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/divided"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif-condensed-light"
                android:text="÷"
                android:textColor="#EEEEEE"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:id="@+id/numRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="7"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="8"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="9"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/multiplied"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="×"
                android:textColor="#444444"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:id="@+id/numRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="4"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="5"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="6"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/minus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="ｰ"
                android:textColor="#444444"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:id="@+id/numRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="1"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="2"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="3"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/plus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="+"
                android:textColor="#444444"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:id="@+id/numRow5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/bt0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="0"
                android:textColor="#444444"
                android:textSize="36sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/period"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="."
                android:textColor="#444444"
                android:textSize="38sp" />

            <com.dayoapp.Calculator.PushButton
                android:id="@+id/result"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:background="@drawable/button_style2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="="
                android:textColor="#444444"
                android:textSize="38sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>